<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/login")
    @Scripts.Render("~/bundles/bootstrap")
 
    <style>
        body {
            background: url(../../Content/city.jpg) no-repeat center center fixed !important;
            background-repeat: no-repeat;
            zoom: 0.8;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        .panel {
            border: 1px solid #101010 !important;
        }
        .container:before{
            opacity:0.4;
        }
        #settings-panel {
            font-size: 30px;
            padding: 20px !important;
            background-color: #2C2F34 !important;
            color: white !important;
            opacity: 0.9;
            margin-top: 5%;
            width: 600px;
            margin-left: auto;
            margin-right: auto;
        }
        #settings-panel input{
            width:100%;
        }
        .logo-img {
          
            margin-top: 30vh;
        }
        h4 {
            text-align: center;
            color: #F44336;
        }

    </style>
</head>
<body id="@ViewBag.guid">
    
    <div class="container">
        <div class="logo-img"><img src="~/Content/logo.png" /></div>
      
        <div id="settings-panel"  class="panel panel-default">
           
            <div class="panel-body">
                <input type="password" placeholder="Enter password"/>
            </div>
            <h4 style="display:none">
                Bad password!
            </h4>
            <div class="panel-footer"><button id="login" type="button" class="btn btn-success">GO!</button></div>
        </div>
        


    </div><!-- /.container -->
   
</body>
</html>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
 
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/galleria")
    <script>
        $(document).ready(function () {
            Galleria.loadTheme('Scripts/galleries/galleria/themes/classic/galleria.classic.min.js');
            Galleria.run('.galleria');
        })
    </script>
    <style>
        .galleria {
            max-width: 100%;
            height: 100vh;
            background: #000
        }
    </style>
</head>
<body>
    <div class="galleria">
        @for (var i = 0; i < ViewBag.images.Count; i++)
        {
            <img src="images/@ViewBag.guid/@ViewBag.images[i].filename">
         
        }
       
    </div>


 
</body>
</html>
